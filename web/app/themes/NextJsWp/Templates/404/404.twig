{% extends '@Templates/Layout/Layout.twig' %}

{% from '@Components/Breadcrumbs/Breadcrumbs.twig' import Breadcrumbs %}
{% from '@Components/NewsCard/NewsCard.twig' import NewsCard %}

{% block content %}
  <div class="nextjswp-main-wrapper">
    {{
      Breadcrumbs({
        items: [
          {
            text: 'Home',
            link: '/'
          },
          {
            text: 'Page not found'
          }
        ]
      })
    }}

    <div class="content-wrapper">
      <h1>
        {{ options.not_found_title }}
      </h1>
      <div class="text-wrapper">
        {{ function('apply_filters', 'the_content', options.not_found_content) }}
      </div>
    </div>

    <div class="links-wrapper">
      {% for page in options.not_found_pages %}
        {{
          NewsCard({
            title: page.title,
            titleHeading: 'h2',
            link: page.link,
            thumbnail: Image(page.image)
          })
        }}
      {% endfor %}
    </div>
  </div>
{% endblock %}
